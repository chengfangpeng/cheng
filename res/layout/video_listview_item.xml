<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
     >
    
    <ImageView 
        android:id="@+id/video_item_thumbnail"
         android:layout_width="80dp"
        android:layout_height="60dp"
         android:layout_marginTop="5dp"
          android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="#d1d1d1"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/base_list_default_icon"
        />
    <TextView 
        android:id="@+id/video_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/video_item_thumbnail"
        android:layout_centerVertical="true"
        android:text="【天云解说真三】天梯2300高端局系列之小莫落寞 2014年11月3日"
        />
    

</RelativeLayout>
